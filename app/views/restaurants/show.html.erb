<h1>
<%=@restaurant.name %>
</h1>
<p> <%= @restaurant.address %> </p>

<% @restaurant.reviews.each do |review| %>
  <p> <%= review.content  %> Rating: <%= review.rating %></p>
<% end %>

  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, collection: 0..5%>
    <%= f.submit 'Add Review', class: 'btn btn-primary' %>
  <% end %>

  <%= button_to "Destroy this restaurant", @restaurant, method: :delete %>

  <%= link_to "Back to Restaurants", restaurants_path %>
